<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/projectsymfony/css/products.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('js/lib/jquery/jquery-ui/jquery-ui.min.css') }}"/>
            <link rel="stylesheet" type="text/css" href="{{ asset('js/lib/datatables/datatables.min.css') }}"/>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block headerOfContent %}
            <div class="header">
                <h1>{% block headerContent %}Lista de productos{% endblock %}</h1>
            </div>
        {% endblock %}
        {% block body %}
            {% block container %}
                <div class="container">
                    {% block bodyOfContent %}
                        <div>{% block bodyContent %}{% endblock %}</div>
                    {% endblock %}
                </div>
            {% endblock %}
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/lib/jquery/jquery.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/lib/jquery/jquery-ui/jquery-ui.min.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
